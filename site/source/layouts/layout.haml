<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    %meta{:content => "IE=edge,chrome=1",
          :"http-equiv" => "X-UA-Compatible"}

    <!-- Use title if it's in the page YAML frontmatter -->
    %title
      = data.page.title || "The Omegaverse"
    
    = stylesheet_link_tag "normalize", "layout"
    = stylesheet_link_tag "vendor/jquery-ui"
    = yield_content :stylesheets

    = javascript_include_tag "vendor/jquery-1.7.1.min"
    = javascript_include_tag "omega"
    = yield_content :javascripts
  
  %body{:class => page_classes}
    #navigation
      #primary_navigation
        = link_to "About",  "http://wiki.omegaverse.info/about"
        \/
        = link_to "Wiki",   "http://wiki.omegaverse.info"
        \/
        = link_to "Blog",   "http://blog.omegaverse.info"
        \/
        = link_to "Forums",   "http://wiki.omegaverse.info/forum:start"
        \/
        = link_to "Stats",  "/stats.html", :only_path => false
        .clear_both

      #secondary_navigation
        = yield_content :secondary_navigation


    = yield
